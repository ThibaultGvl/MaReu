<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meeting_list_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/color_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_brightness_1_24"
        android:paddingTop="@dimen/image_padding_tp"
        android:paddingBottom="@dimen/image_padding_btm"
        android:paddingEnd="@dimen/image_padding_btm"
        android:paddingStart="@dimen/image_padding_tp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/meeting_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/color_meeting"
        app:layout_constraintStart_toEndOf="@+id/color_meeting"
        app:layout_constraintTop_toTopOf="@id/color_meeting"
        app:layout_constraintVertical_bias="0.194" />

    <TextView
        android:id="@+id/dash_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/meeting_name"
        android:textSize="15sp"
        android:layout_marginStart="@dimen/text_space"
        android:text="@string/Dash"
        app:layout_constraintBottom_toBottomOf="@id/meeting_name"
        app:layout_constraintStart_toEndOf="@+id/meeting_name"
        app:layout_constraintTop_toTopOf="@id/meeting_name" />

    <TextView
        android:id="@+id/meeting_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Hour"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart= "@dimen/text_space"
        app:layout_constraintBottom_toBottomOf="@id/dash_one"
        app:layout_constraintStart_toEndOf="@+id/dash_one"
        app:layout_constraintTop_toTopOf="@id/dash_one"/>

    <TextView
        android:id="@+id/dash_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="@dimen/text_space"
        android:text="@string/Dash"
        app:layout_constraintBottom_toBottomOf="@id/meeting_hour"
        app:layout_constraintStart_toEndOf="@+id/meeting_hour"
        app:layout_constraintTop_toTopOf="@id/meeting_hour"/>

    <TextView
        android:id="@+id/meeting_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Room"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart= "@dimen/text_space"
        app:layout_constraintBottom_toBottomOf="@id/dash_two"
        app:layout_constraintStart_toEndOf="@+id/dash_two"
        app:layout_constraintTop_toTopOf="@id/dash_two"/>

    <TextView
        android:id="@+id/meeting_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_space"
        android:paddingTop="@dimen/text_space"
        android:text="@string/Participants"
        app:layout_constraintBottom_toBottomOf="@id/color_meeting"
        app:layout_constraintStart_toEndOf="@+id/color_meeting"/>

    <ImageButton
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintBottom_toBottomOf="@id/meeting_participants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/meeting_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>